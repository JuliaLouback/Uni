@model Uni.Models.AddProdutoView;
@{
    ViewData["Title"] = "Editar Produto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-primary mt-2 mb-2">Adicionar</h1>
<h4>Produto</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditProduto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar Produto" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@ViewBag.Id">Voltar</a>
            </div>
        </form>
    </div>
</div>
