@model Uni.Models.Fornecedor

@{
    ViewData["Title"] = "Adicionar";
}

<h1 class="text-primary mt-2 mb-2">Adicionar</h1>

<h4>Fornecedor</h4>
<hr />
<div class="row">
    <div class="col-md-10 col-sm-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-5 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Nome_empresa" class="control-label"></label>
                        <input asp-for="Nome_empresa" class="form-control" />
                        <span asp-validation-for="Nome_empresa" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-5 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Telefone.Telefones" class="control-label"></label>
                        <input asp-for="Telefone.Telefones" class="form-control" />
                        <span asp-validation-for="Telefone.Telefones" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Cnpj" class="control-label"></label>
                        <input asp-for="Cnpj" class="form-control" />
                        <span asp-validation-for="Cnpj" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Inscricao_estadual" class="control-label"></label>
                        <input asp-for="Inscricao_estadual" class="form-control" />
                        <span asp-validation-for="Inscricao_estadual" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Inscricao_municipal" class="control-label"></label>
                        <input asp-for="Inscricao_municipal" class="form-control" />
                        <span asp-validation-for="Inscricao_municipal" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-3 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Endereco.Cep" class="control-label"></label>
                        <input asp-for="Endereco.Cep" class="form-control" />
                        <span asp-validation-for="Endereco.Cep" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Endereco.Numero" class="control-label"></label>
                        <input asp-for="Endereco.Numero" class="form-control" />
                        <span asp-validation-for="Endereco.Numero" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Endereco.Rua" class="control-label"></label>
                        <input asp-for="Endereco.Rua" class="form-control" />
                        <span asp-validation-for="Endereco.Rua" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Endereco.Bairro" class="control-label"></label>
                        <input asp-for="Endereco.Bairro" class="form-control" />
                        <span asp-validation-for="Endereco.Bairro" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Endereco.Cidade" class="control-label"></label>
                        <input asp-for="Endereco.Cidade" class="form-control" />
                        <span asp-validation-for="Endereco.Cidade" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Endereco.Estado" class="control-label"></label>
                        <input asp-for="Endereco.Estado" class="form-control" />
                        <span asp-validation-for="Endereco.Estado" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-1 col-sm-12">
                    <div class="form-group">
                        <a class="btn btn-success" asp-action="Index">Voltar</a>
                    </div>
                </div>
                <div class="col-md-1 col-sm-12">
                    <div class="form-group">
                        <input type="submit" value="Adicionar" class="btn btn-primary" />
                    </div>
                </div>
            </div>    
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
