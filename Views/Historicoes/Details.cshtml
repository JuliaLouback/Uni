@model Uni.Models.Historico

@{
    ViewData["Title"] = "Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-primary mt-2 mb-2">Detalhes</h1>

<div>
    <h4>Historico</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data_inicio)
        </dt>
        <dd class="col-sm-10">
            @Html.TextBoxFor(model => model.Data_inicio, "{0:dd/MM/yyyy}", new { @style = "border:none;" })
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data_final)
        </dt>
        <dd class="col-sm-10">
            @Html.TextBoxFor(model => model.Data_final, "{0:dd/MM/yyyy}", new { @style = "border:none;" })
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.Descricao)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Index">Voltar</a>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id_historico">Editar</a>

</div>
