@model Uni.Models.Produto

@{
    ViewData["Title"] = "Adicionar";
}

<h1 class="text-primary mt-2 mb-2">Adicionar</h1>

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-10 col-sm-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-8 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Valor_unitario" class="control-label"></label>
                        <input asp-for="Valor_unitario" placeholder="1.000,90 / 5,90" class="form-control" type="text" />
                        <span asp-validation-for="Valor_unitario" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Unidade_medida" class="control-label"></label>
                        <input asp-for="Unidade_medida" class="form-control" />
                        <span asp-validation-for="Unidade_medida" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Estoque_minimo" class="control-label"></label>
                        <input asp-for="Estoque_minimo" class="form-control" />
                        <span asp-validation-for="Estoque_minimo" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Estoque_maximo" class="control-label"></label>
                        <input asp-for="Estoque_maximo" class="form-control" />
                        <span asp-validation-for="Estoque_maximo" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-8 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Descricao" class="control-label"></label>
                        <input asp-for="Descricao" class="form-control" />
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Fornecedor_Cnpj" class="control-label"></label>
                        <select asp-for="Fornecedor_Cnpj" class="form-control" asp-items="ViewBag.Fornecedor_Cnpj"></select>
                    </div>
                </div>
                <div class="col-md-1 col-sm-12">
                    <div class="form-group">
                        <a class="btn btn-success" asp-action="Index">Voltar</a>
                    </div>
                </div>
                <div class="col-md-1 col-sm-12">
                    <div class="form-group">
                        <input type="submit" value="Adicionar" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
