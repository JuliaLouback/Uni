@model Uni.Models.Produto

@{
    ViewData["Title"] = "Excluir";
}

<h1 class="text-primary mt-2 mb-2">Excluir</h1>

<h4>Tem certeza que deseja deletar?</h4>
<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Valor_unitario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Valor_unitario)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Unidade_medida)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Unidade_medida)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estoque_minimo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estoque_minimo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estoque_maximo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estoque_maximo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estoque_atual)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estoque_atual)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fornecedor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fornecedor.Email)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id_produto" />
        <a class="btn btn-success" asp-action="Index">Voltar</a>
        <input type="submit" value="Excluir" class="btn btn-danger" />

    </form>
</div>
