@model Uni.Models.Produto

@{
    ViewData["Title"] = "Editar";
}


<h1 class="text-primary mt-2 mb-2">Editar</h1>

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-10 col-sm-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id_produto" />
            <div class="row">
                <div class="col-md-4 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Id_produto" class="control-label"></label>
                        <input asp-for="Id_produto" class="form-control" />
                        <span asp-validation-for="Id_produto" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Valor_unitario" class="control-label"></label>
                        <input asp-for="Valor_unitario" class="form-control" />
                        <span asp-validation-for="Valor_unitario" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Unidade_medida" class="control-label"></label>
                        <select asp-for="Unidade_medida" class="form-control">
                            <option value="Bloco">Bloco</option>
                            <option value="Caixa">Caixa</option>
                            <option value="Galão">Galão</option>
                            <option value="Gramas">Gramas</option>
                            <option value="Quilograma">Quilograma</option>
                            <option value="Litro">Litro</option>
                            <option value="Metro">Metro</option>
                            <option value="Pacote">Pacote</option>
                            <option value="Peça">Peça</option>
                            <option value="Unidade">Unidade</option>
                        </select>
                        <span asp-validation-for="Unidade_medida" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Estoque_minimo" class="control-label"></label>
                        <input asp-for="Estoque_minimo" class="form-control" />
                        <span asp-validation-for="Estoque_minimo" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Estoque_maximo" class="control-label"></label>
                        <input asp-for="Estoque_maximo" class="form-control" />
                        <span asp-validation-for="Estoque_maximo" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Estoque_atual" class="control-label"></label>
                        <input asp-for="Estoque_atual" class="form-control" />
                        <span asp-validation-for="Estoque_atual" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Peso_bruto" class="control-label"></label>
                        <input asp-for="Peso_bruto" class="form-control" />
                        <span asp-validation-for="Peso_bruto" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Peso_liquido" class="control-label"></label>
                        <input asp-for="Peso_liquido" class="form-control" />
                        <span asp-validation-for="Peso_liquido" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-8 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Descricao" class="control-label"></label>
                        <input asp-for="Descricao" class="form-control" />
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Fornecedor_Cnpj" class="control-label"></label>
                        <select asp-for="Fornecedor_Cnpj" class="form-control" asp-items="ViewBag.Fornecedor_Cnpj"></select>
                    </div>
                </div>
                <div class="col-md-12 col-sm-12">
                    <div class="form-group">
                        <label asp-for="CFOP_Codigo" class="control-label"></label>
                        <select asp-for="CFOP_Codigo" class="form-control" asp-items="ViewBag.CFOP_Codigo"></select>
                    </div>
                </div>
                <div class="col-md-12 col-sm-12">
                    <div class="form-group">
                        <label asp-for="NCM_Codigo" class="control-label"></label>
                        <select asp-for="NCM_Codigo" class="form-control" asp-items="ViewBag.NCM_Codigo"></select>
                    </div>
                </div>
                <div class="col-md-12 col-sm-12">
                    <div class="form-group">
                        <label asp-for="CST_Codigo" class="control-label"></label>
                        <select asp-for="CST_Codigo" class="form-control" asp-items="ViewBag.CST_Codigo"></select>
                    </div>
                </div>
                <div class="col-md-1 col-sm-12">
                    <div class="form-group">
                        <a class="btn btn-success" asp-action="Index">Voltar</a>
                    </div>
                </div>
                <div class="col-md-1 col-sm-12">
                    <div class="form-group">
                        <input type="submit" value="Editar" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
