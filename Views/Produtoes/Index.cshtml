@model IEnumerable<Uni.Models.Produto>

@{
    ViewData["Title"] = "Produtos";
}

<h1 class="text-primary mt-2">Produtos</h1>

<p>
    <a class="btn btn-outline-primary mt-4" asp-action="Create">Adicionar</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id_produto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor_unitario)
            </th>
            <th>
               Un. Medida
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estoque_minimo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estoque_maximo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estoque_atual)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id_produto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                R$ @Html.DisplayFor(modelItem => item.Valor_unitario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unidade_medida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estoque_minimo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estoque_maximo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estoque_atual)
            </td>
            <td>
                <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.Id_produto">Editar</a>
                <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.Id_produto">Detalhes</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id_produto">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
