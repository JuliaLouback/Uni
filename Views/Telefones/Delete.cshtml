@model Uni.Models.Telefone

@{
    ViewData["Title"] = "Excluir";
}

<h1 class="text-primary mt-2 mb-2">Excluir</h1>

<h4>Tem certeza que deseja deletar?</h4>
<div>
    <h4>Telefone</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefones)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefones)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id_telefone" />
        <a class="btn btn-success" asp-action="Index">Voltar</a>
        <input type="submit" value="Excluir" class="btn btn-danger" />
    </form>
</div>
