@model Uni.Models.AddProdutoView;
@{
    ViewData["Title"] = "AddHistorico";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-primary mt-2 mb-2">Adicionar</h1>
<h4 class="mb-2">Histórico</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddHistorico">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id_historico" class="control-label"></label>
                <select asp-for="Id_historico" class="form-control" asp-items="ViewBag.Data"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar Produto" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
