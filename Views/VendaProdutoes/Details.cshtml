@model Uni.Models.Venda

@{
    ViewData["Title"] = "Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-primary mt-2 mb-2">Detalhes</h1>

<div>
    <h4>Venda</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente.Cpf)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Cpf)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Funcionario.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Funcionario.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Funcionario.Cpf)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Funcionario.Cpf)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data_venda)
        </dt>
        <dd class="col-sm-10">
            @Html.TextBoxFor(model => model.Data_venda, "{0:dd/MM/yyyy}", new { @style="border:none;"})
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Valor_total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Valor_total)
        </dd>
    </dl>
    <h4>Produtos </h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Nome
                </th>
                <th>
                    Quantidade
                </th>
                <th>
                    Valor Unitário
                </th>
                <th>
                    Total
                </th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.Lista != null)
            {
                foreach (VendaProduto produto in ViewBag.Lista)
                {
                    <tr>
                        <td>
                            @produto.Produto.Nome
                        </td>
                        <td>
                            @produto.Quantidade
                        </td>
                        <td>
                            R$ @produto.Produto.Valor_unitario
                        </td>
                        <td>
                            R$ @produto.Valor
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<div>
    <a class="btn btn-primary" asp-action="Index">Voltar</a>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Id_venda" asp-route-novo="1">Editar</a>
    <!---@Html.ActionLink("Visualizar Nota Fiscal", "GerarNota", new { id = Model.Id_venda }, new { @class = "btn btn-info" })-->
</div>
